# Redirecionamento de erro 404 para 404.html
ErrorDocument 404 /404.html

# Redireciona /index ou /index.html para a raiz /
RewriteEngine On
RewriteCond %{THE_REQUEST} /index(\.html)?[\s?] [NC]
RewriteRule ^index(\.html)?$ / [R=301,L]

# Reescreve URLs sem .html para o arquivo .html correspondente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9/_-]+)$ $1.html [L]

# Outras configurações podem ser personalizadas posteriormente 